<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
  <package name="inception-user" extends="inception-default">

        <action name="Login" class="com.inception.action.UserLoginAction" >
        	<result name="success" type="redirectAction">Home.action</result>
        	<result name="input">/User/login.jsp</result>
        </action>
        <action name="Logout" class="com.inception.action.UserLogoutAction">
        	<result type="redirect">Home.action</result>
        </action>
        
        <action name="AdminMain" class="com.inception.action.admin.AdminMainAction">
        	<result name="success">/Admin/houtai.jsp</result>
        	<result name="error">/User/not_login.jsp</result>
        </action>
        <action name="AdminAdd" class="com.inception.action.admin.AdminAddAction">
        	<result>/Admin/admin_add.jsp</result>
        	<result type="redirect">Admin.action</result>
        </action>
        
        <action name="AdminUpload" class="com.inception.action.admin.AdminUploadAction">
        	<result name="success" type="redirect">/Admin.action</result>
        	<result name="input">/Admin/admin_upload.jsp</result>
        </action>
        
        <action name="AdminUserManage" class="com.inception.action.admin.AdminUserManageAction">
        	<result>/Admin/user_manage.jsp</result>
        </action>
        <action name="Admin" class="com.inception.action.admin.AdminAction" >
        	<result>/Admin/admin.jsp</result>
        </action>
        <action name="AdminAajx" class="com.inception.action.admin.AdminAjaxAction">
        </action>
        <action name="UserMain" class="com.inception.action.UserMainAction">
        	<result name="success">/User/main.jsp</result>
        	<result name="error">/User/not_login.jsp</result>
        </action>
        
        <action name="UserRegist" class="com.inception.action.UserRegistAction">
        	<result name="success" type="redirectAction">Home.action</result>
        	<result name="input" >/User/regist.jsp</result>
        </action>
        
        <action name="Home" class="com.inception.action.home.HomeAction">
        	<result >/Home/home.jsp</result>
        </action>
    </package>
</struts>